{
  "name": "@srmcguirt/prettier-config",
  "version": "0.0.0",
  "description": "Prettier config",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/srmcguirt/prettier-config"
  },
  "scripts": {
    "build": "tsup",
    "bump": "bumpp -r",
    "preinstall": "npx only-allow pnpm",
    "prepack": "tsup",
    "release": "pnpm bump && pnpm -r publish",
    "test": "echo \"Error: no test specified\" && exit 1",
    "upgrade": "npm-check -u && npm audit fix"
  },
  "keywords": [
    "prettier",
    "config"
  ],
  "author": "Shane McGuirt<srmcguirt@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/prettier": "^2.7.2",
    "bumpp": "^9.1.0",
    "npm-check": "^6.0.1",
    "prettier": "^2.8.7",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3"
  },
  "peerDependencies": {
    "prettier": "^2.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "config": false,
    "clean": true,
    "dts": true,
    "entry": [
      "src/index.ts"
    ],
    "external": [
      "prettier"
    ],
    "format": [
      "cjs"
    ],
    "sourcemap": false,
    "splitting": false
  }
}
